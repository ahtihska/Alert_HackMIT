<% layout('layouts/boilerplate')%>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Danger Zones</h1>

<% for (let incident of incidents){%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <%if(incident.images.length) {%>
      <img class="img-fluid" alt="" src="<%=incident.images[0].url%>" />
      <% }else {%>
      <img
        class="img-fluid"
        alt=""
        src="https://res.cloudinary.com/dvwmvimvl/image/upload/v1631975486/Crime_report/crime_xsjxqc.jpg"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= incident.title %></h5>
        <p class="card-text"><%= incident.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= incident.location%></small>
        </p>
        <a class="btn btn-primary" href="/incidents/<%=incident._id%>"
          >View <%=incident.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const incidents = { features: <%- JSON.stringify(incidents) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
<link rel="stylesheet" href="/stylesheets/index.css" />
